<!DOCTYPE html>
<html>
  <head>
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1,minimal-ui">
    <title>eCloud</title>
      <script type="application/javascript" src="/ecloud/bower_components/jquery/dist/jquery.min.js"></script>
      <link href="/ecloud/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/ecloud/stylesheets/style.css' />

      <script src="/socket.io/socket.io.js"></script>

    <script type="application/javascript">
        var __sessionID  = "<%= sessionID %>"
        var socket = io();
        socket.emit("registerFilterActivities",{neeSession:__sessionID});



        socket.on("filterUpdate",function(results) {
            var htmlString = "";
            results.some(function(r,i){
                //get total
                var htmlSubString = "<div class='topBorder'>&nbsp;</div>";

                var total = 0;
                if(r.data != undefined && r.data[0] != undefined && r.data[0].result != undefined) {
                    Object.keys(r.data[0].result.LANGUAGE).forEach(function(l){
                        total += r.data[0].result.LANGUAGE[l];
                    })
                }

                if(r.queries != undefined) {
                    r.queries.forEach(function (q) {

                        htmlSubString +=  " <span class='queryString'>" + q + "</span>";


                    })
                }
                if(r.facets != undefined) {
                    Object.keys(r.facets).forEach(function (q) {
                        r.facets[q].forEach(function(f){
                            htmlSubString += " <span  class='facetString'>" + q + ":" + f + "</span>";
                        })



                    })
                }
                var totalClass = i == 0 ? "totalBase" : "totalRest"
                htmlSubString += "<h3 class='total'><span class='" + totalClass + "'>" + total + "</span> items</h3><br/>";

                htmlString = htmlSubString + "<br/>" + htmlString;
            })



            $("#results").html(htmlString);
        });

        $(window).bind('unload', function(){
            socket.disconnect();
        });

    </script>

  </head>
  <body>
  <div id="history">
  <h3>nee .history</h3>
      <div id="results"></div>
     </div>


  </body>
</html>
