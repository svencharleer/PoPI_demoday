<!DOCTYPE html>
<html>
  <head>
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1,minimal-ui">
    <title>eCloud</title>
      <script type="application/javascript" src="bower_components/jquery/dist/jquery.min.js"></script>
      <link href="bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />

      <script src="/socket.io/socket.io.js"></script>

    <script type="application/javascript">
        var socket = io();
        socket.emit("registerFilterActivities");



        socket.on("filterUpdate",function(results) {
            var htmlString = "";
            results.some(function(r){
                var htmlSubString = "";
                if(r.queries != undefined) {
                    r.queries.forEach(function (q) {

                        htmlSubString += " <span class='queryString'>" + q + "</span>";


                    })
                }
                if(r.facets != undefined) {
                    Object.keys(r.facets).forEach(function (q) {

                        htmlSubString += " <span  class='facetString'>" + q + " = " + r.facets[q] + "</span>";


                    })
                }
                htmlString = htmlSubString + "<br/>" + htmlString;
            })



            $("#results").html(htmlString);
        });

        $(window).bind('unload', function(){
            socket.disconnect();
        });

    </script>

  </head>
  <body>
  <h1>nee .history</h1>
      <div id="results"></div>
     </div>


  </body>
</html>
